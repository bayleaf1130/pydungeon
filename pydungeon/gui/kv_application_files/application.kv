<InventoryPanel>:
    text: 'Inventory'

    BoxLayout:
        orientation: 'vertical'
        
        ScrollView:
            scroll_type: ['bars']
            size_hint_x: 1
            bar_width: 15
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: scroll_view_layout_inventory
                height: self.minimum_height
                size_hint_x: 1
                size_hint_y: None
                cols: 1
                spacing: 10
                row_default_height: 100
                row_force_default: True

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25
            anchor_y:'bottom'

            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    id: inventory_item_input
                    size_hint_y: 0.4
                    font_size: '18dp'
                    halign: 'left'
                    hint_text: "Inventory Item"

                TextInput:
                    id: inventory_item_description_input
                    size_hint_y: 0.6
                    font_size: '18dp'
                    halign: 'left'
                    hint_text: "Inventory Description"


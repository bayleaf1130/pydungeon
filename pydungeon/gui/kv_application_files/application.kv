<CharacterCreator>:
    orientation: 'vertical'

    GridLayout:
        size_hint_y: 0.15
        cols: 3

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: (None, 0.5)
                font_size: '18dp'
                text: "Exit"
        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            TextInput:
                size_hint: (0.9, 0.5)
                font_size: '28dp'
                halign: 'center'
                hint_text: "Character Name"

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: (None, 0.5)
                font_size: '18dp'
                text: "Continue"
        
    CreationTab:
        id: creation_tab

<CreationTab>:
    size_hint_y: 0.85
    cols: 4

    TabbedPanel:
        tab_width: self.width/4
        do_default_tab: False

        RacePanel:
        
        ClassPanel:
                
        AbilitiesPanel:

        SkillsPanel:


    RelativeLayout:
    
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            padding: [25, 0]

            Image:  
                id: class_icon_widget
                allow_stretch: True
                keep_ratio: True
                width: '50dp'
                size_hint: 0.2, 0.2
                source: 'gui/classes_icons/barbarian_icon.png'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            Image:
                id: character_image_widget
                size_hint: (0.85, 0.85)
                allow_stretch: True
                keep_ratio: True
                source: 'gui/character_images/fantasy_dragonborn.png'

    TabbedPanel:
        tab_width: self.width/5
        do_default_tab: False
                
        StatsPanel:
                
        BonusesPanel:
                
        InventoryPanel:
                
        TabbedPanelItem:
            text: 'Proficiencies'
            Label:
                text: 'Language + Weapon... Proficiency info'
                
        AttackPanel:


<RacePanel>:
    text: 'Race'

    BoxLayout:
        orientation: 'vertical'
        
        ScrollView:
            scroll_type: ['bars']
            size_hint_x: 1
            bar_width: 15
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: scroll_view_layout_races
                height: self.minimum_height
                size_hint_x: 1
                size_hint_y: None
                cols: 2
                spacing: 10
                row_default_height: 100
                row_force_default: True

                CheckBox:
                    on_active: root.race_change(self, self.active, 'Dragonborn')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                    active: True
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Dragonborn'
        
                CheckBox:
                    on_active: root.race_change(self, self.active, 'Dwarf')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Dwarf'
        
                CheckBox:
                    on_active: root.race_change(self, self.active, 'Elf')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Elf'

                CheckBox:
                    on_active: root.race_change(self, self.active, 'Gnome')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Gnome'
                    
                CheckBox:
                    on_active: root.race_change(self, self.active, 'Half-Elf')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Half-Elf'

                CheckBox:
                    on_active: root.race_change(self, self.active, 'Halfling')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Halfling'

                CheckBox:
                    on_active: root.race_change(self, self.active, 'Half-Orc')
                    size_hint_x: None
                    group: 'races'
                    allow_no_selection: False
                Label:
                    font_size: '18sp'
                    size_hint_x: None   
                    text: 'Half-Orc'
                    
                CheckBox:
                    on_active: root.race_change(self, self.active, 'Human')
                    size_hint_x: None
